        <input type="text" placeholder="mm/dd/yyyy" pattern="(0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])[- /.](19|20)\d\d"  class="datepicker input-text required-entry" value="<?php echo $dob ?>" id="<?php echo $this->getFieldId('dob')?>" name="<?php echo $this->getFieldName('dob')?>"  />
    </div>

    <?php }

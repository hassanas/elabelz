<config>
    <tabs>
        <ordermonitor translate="label" module="ordermonitor_agent">
            <label>Order Monitor</label>
            <sort_order>4000</sort_order>
        </ordermonitor>
    </tabs>
    <sections>
        <ordermonitor translate="label" module="ordermonitor_agent">
            <label>Configuration</label>
            <tab>ordermonitor</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general_configuration translate="label">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <om_username translate="label">
                            <label>Account Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[
                                Order Monitor Account Name - created during sign up, see account page.
                                ]]>
                            </comment>
                        </om_username>

                        <om_key translate="label">
                            <label>Agent Key</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[
                                Order Monitor Agent Key - get this from your account page.
                                ]]>
                            </comment>
                        </om_key>

                        <om_debug translate="label">
                            <label>Debug Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[
                                Output additional information for debugging.
                                ]]>
                            </comment>
                        </om_debug>
                    </fields>
                </general_configuration>
            </groups>
        </ordermonitor>
    </sections>
</config>
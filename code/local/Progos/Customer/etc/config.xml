<?xml version="1.0"?>
<config>
  <modules>
    <Progos_Customer>
      <version>1.0</version>
    </Progos_Customer>
  </modules>

  <global>
      <helpers>
          <progos_customer>
              <class>Progos_Customer_Helper</class>
          </progos_customer>
      </helpers>
      <blocks>
          <progos_customer>
              <class>Progos_Magidev_Block</class>
          </progos_customer>
          <adminhtml>
              <rewrite>
                  <customer_edit_tab_view_orders>Progos_Customer_Block_Adminhtml_Customer_Edit_Tab_View_Orders</customer_edit_tab_view_orders>
              </rewrite>
          </adminhtml>
      </blocks>
        <models>
            <customer>
                <rewrite>
                    <customer>Progos_Customer_Model_Customer</customer>
                </rewrite>
            </customer>
        </models>
      <blocks>
          <adminhtml>
              <rewrite>
                  <customer_grid>Progos_Customer_Block_Adminhtml_Customer_Grid</customer_grid>
              </rewrite>
          </adminhtml>
      </blocks>
  </global>
  <frontend>
    <routers>
      <customer>
        <args>
          <modules>
            <Progos_Customer before="Mage_Customer">Progos_Customer</Progos_Customer>
          </modules>
        </args>
      </customer>
    </routers>
  </frontend>
    <default>
        <customer>
            <password>
                <change_password_email_identity>support</change_password_email_identity>
                <change_password_token_time>24</change_password_token_time>
            </password>
        </customer>
    </default>
</config>
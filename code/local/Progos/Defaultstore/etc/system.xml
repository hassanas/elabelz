<?xml version="1.0"?>
<config>
    <sections>
        <general translate="label" module="defaultstore">
            <groups>
                <country>
                    <fields>
                        <enable translate="label">
                            <label>Enable Geo IP Redirect to country store</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable Disable Store redirect
                            </comment>
                        </enable>
                        <defaultstore translate="label">
                            <label>Default store</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter code of the store which will be displayed to visitors if they are not from
                                one of the listed countries
                            </comment>
                        </defaultstore>
                        <defaultlang translate="label">
                            <label>Default Language</label>
                            <frontend_type>select</frontend_type>
                            <source_model>defaultstore/defaultlang</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select Default Language of storview for new users
                            </comment>
                        </defaultlang>
                        <logIp translate="label">
                            <label>Log Ip</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable Ip Logging</comment>
                        </logIp>
                    </fields>
                </country>
            </groups>
        </general>
    </sections>
</config>

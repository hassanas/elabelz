<?xml version="1.0"?>
<config>
    <sections>
        <catalog translate="label" module="saleproductscategories">
            <groups>
                <salecategory translate="label">
                    <label>Sale Category</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Copying</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </enabled>
                        <sourcerootcategory translate="label">
                            <label>Source Root Category Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter Default Category Id.</comment>
                        </sourcerootcategory>
                        <salerootcategory translate="label">
                            <label>Sale Root Category Id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter Sale Category Id that is parent to all sale related categories.</comment>
                        </salerootcategory>
                        <copymissingcat translate="label">
                            <label>Copy Missing Categories</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Create categories that are not in sale category</comment>
                        </copymissingcat>
                        <copyproducts translate="label">
                            <label>Copy Category Products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Assign on sale category products to newly created category/ we have a cronjob too which can handle this</comment>
                        </copyproducts>
                        <mapcategories translate="label comment">
                            <frontend_type>button</frontend_type>
                            <frontend_model>Progos_SaleProductsCategories_Block_Adminhtml_System_Config_Mapcategories</frontend_model>
                            <sort_order>700</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Map Categories.</comment>
                        </mapcategories>
                        <testmode translate="label">
                            <label>Enable Test Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </testmode>
                        <clearTable translate="label">
                            <label>Clear table before mapping</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment></comment>
                        </clearTable>
                    </fields>
                </salecategory>
            </groups>
        </catalog>
    </sections>
</config>

<?xml version="1.0"?>
<config>
    <tabs>
        <change_price translate="label" module="progos_changeprice">
            <label>Change Product Price</label>
            <sort_order>101</sort_order>
        </change_price>
    </tabs>
    <sections>
        <change_price_general  translate="label" module="progos_changeprice">
            <label>General</label>
            <tab>change_price</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <change_price_settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <change_price_enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </change_price_enable>
                        <change_price_amount translate="label">
                            <label>Amount to update</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </change_price_amount>
                        <change_price_based_condition translate="label">
                            <label>Filter Condition Based Product Collection</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </change_price_based_condition>
                        <change_price_decrease_price translate="label">
                            <label>Decrease Price</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </change_price_decrease_price>
                        <change_price_amount_dryrun translate="label">
                            <label>Generate Only Dryrun Results</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </change_price_amount_dryrun>
                        <apply translate="label">
                            <label>Run Script</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>Progos_Changeprice_Block_Adminhtml_System_Config_Form_Button</frontend_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apply>
                    </fields>
                </change_price_settings>
            </groups>
        </change_price_general>
    </sections>
</config>
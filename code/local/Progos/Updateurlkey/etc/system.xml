<?xml version="1.0"?>
<config>
    <sections>
        <updateurlkey_general  translate="label" module="progos_updateurlkey">
            <label>Product URL Key Updator</label>
            <tab>progos</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <updateurlkey_settings translate="label">
                    <label>Product URL Key Updator</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable>
                        <dryrun translate="label">
                            <label>Dry Run</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </dryrun>
                        <ids translate="label">
                            <label>Product Ids</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Comma Seperated Configurable Product Ids. If empty then will fetch whole configurable Product collection.</comment>
                        </ids>
                        <store translate="label">
                            <label>Store Ids</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Comma Seperated Store Ids. If empty then will Effect all stores.</comment>
                        </store>
                        <apply translate="label">
                            <label>Run Script</label>
                            <frontend_type>button</frontend_type>
                            <frontend_model>Progos_Updateurlkey_Block_Adminhtml_System_Config_Form_Button</frontend_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </apply>
                    </fields>
                </updateurlkey_settings>
            </groups>
        </updateurlkey_general>
    </sections>
</config>
<config>
    <tabs>
        <progos translate="label" >
            <label>Progos</label>
            <sort_order>400</sort_order>
        </progos>
    </tabs>
    <sections>
        <bestseller translate="label" module="bestseller">
            <tab>progos</tab>
            <label>Best Seller Products settings</label>
            <frontend_type>text</frontend_type>
            <sort_order>401</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
				<genneral_setting>
					<label>Genneral setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Best Seller Product Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
					</fields>
				</genneral_setting>
                <configuration_setting translate="label">
                    <label>Configuration (Product page, CMS page, static block)</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <title translate="label comment">
                            <label>Title </label>
                            <comment>Show your title here</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
						<days_no translate="label comment">
                            <label>Set number days for bestseller products to show on</label>
                            <comment>Default: 30 (products).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </days_no>
                        <product_no translate="label comment">
                            <label>Set number of bestseller products to show on</label>
                            <comment>Default: 20 (days).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_no>					
                    </fields>
                </configuration_setting>
            </groups>
        </bestseller>	
    </sections>
</config>

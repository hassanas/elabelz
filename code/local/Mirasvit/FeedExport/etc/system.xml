<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <feedexport translate="label" module="feedexport">
            <label>Advanced Product Feeds</label>
            <tab>mstcore</tab>
            <frontend_type>text</frontend_type>
            <sort_order>500</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <generation>
                    <label>File Generation Settings</label>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <sort_order>10</sort_order>
                    <fields>
                        <iteration_size translate="label">
                            <label>Number of Products per Iteration</label>
                            <frontend_type>text</frontend_type>
                            <frontend_class>validate-digits-range digits-range-0-10000</frontend_class>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[This option allows to optimize file creation. In the range from 0 to 10000. 0 for default behaviour.]]></comment>
                        </iteration_size>
                        <profiler translate="label">
                            <label>Enable Profiler</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Enable to display profiler during product feed generation]]></comment>
                        </profiler>
                    </fields>
                </generation>
            </groups>
        </feedexport>
    </sections>
</config>